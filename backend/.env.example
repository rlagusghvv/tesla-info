# Server
PORT=8787
HOST=127.0.0.1

# Mode
USE_SIMULATOR=1
POLL_TESLA=0
POLL_INTERVAL_MS=8000

# Tesla Fleet API (for real data mode)
# Partner app settings (from Tesla Developer Dashboard)
TESLA_CLIENT_ID=
TESLA_CLIENT_SECRET=

# Your app domain (must host public key at /.well-known/appspecific/com.tesla.3p.public-key.pem)
TESLA_DOMAIN=

# OAuth redirect URI (must be registered in Tesla dashboard)
TESLA_REDIRECT_URI=

# User tokens (generated via authorization code flow)
TESLA_USER_ACCESS_TOKEN=
TESLA_USER_REFRESH_TOKEN=
TESLA_USER_TOKEN_EXPIRES_AT=

# Audience should match Fleet API base
TESLA_AUDIENCE=https://fleet-api.prd.na.vn.cloud.tesla.com

# Optional: if empty, backend will auto-pick first vehicle from /api/1/vehicles
TESLA_VIN=
TESLA_FLEET_API_BASE=https://fleet-api.prd.na.vn.cloud.tesla.com

# TeslaMate fallback mode
# Set USE_SIMULATOR=0 and USE_TESLAMATE=1 to enable.
USE_TESLAMATE=0
TESLAMATE_API_BASE=http://127.0.0.1:8080
TESLAMATE_API_TOKEN=
TESLAMATE_CAR_ID=
TESLAMATE_AUTH_HEADER=Authorization
TESLAMATE_TOKEN_QUERY_KEY=
TESLAMATE_CONTAINER_NAME=teslamate-stack-teslamate-1
TESLAMATE_AUTO_AUTH_REPAIR=1
TESLAMATE_AUTH_REPAIR_COOLDOWN_MS=180000
TESLAMATE_AUTH_REPAIR_SETTLE_MS=3000
